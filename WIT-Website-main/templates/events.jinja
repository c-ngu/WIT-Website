{% extends 'top.jinja' %}

{% block content %} 

    <style>
        /* New Section Styles */
        .content-section {
            background-color: #f5f5f5; /* Light grey background */
            padding: 60px 0; /* Padding for the section */
        }

        .content-container {
            max-width: 1300px;
            margin: 0 auto; /* Center the content */
            padding: 0 20px; /* Padding for mobile responsiveness */
        }

        .content-box {
            background-color: white;
            border-radius: 15px; /* Rounded corners */
            padding: 60px;
            margin-bottom: 40px; /* Spacing between boxes */
            text-align: center;
        }

        .large {
            font-size: 3rem
        }

        /* Style for the top banner */
            .top-banner {
                background-color: #7A1F8D; /* Purple background */
                padding: 50px 40px;
                display: flex;
                justify-content: center;
                align-items: center;
                margin-bottom: 100px;
            }

            /* Content inside the banner */
            .banner-content {
                display: flex;
                justify-content: space-between;
                align-items: center;
                width: 100%;
            }

            /* Title styling */
            .banner-content .title {
                flex: 1;
                font-size: 4rem;
                font-weight: bold;
                color: white;
            }

            /* Caption styling */
            .banner-content .caption {
                flex: 1;
                text-align: right;
                font-size: 1.5em;
                line-height: 1.6;
                color: white;
                margin-right: 20px;
            }

    </style>


    <div class="top-banner">
            <div class="banner-content">
                <h1 class="title"> Events</h1>
                <div class="caption">
                    View upcoming and past events.
                </div>
            </div>
    </div>


    <div class="content-box" style="margin-bottom:300px">
        <h1>This page is still under development.</h1>
        <p>Thank you for your patience.</p>
    </div>


    <footer>  
        {% include "footer.jinja" %}
    </footer>

{% endblock %}
