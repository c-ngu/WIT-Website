{% extends 'index.jinja' %}

{% block navbar %} 
    <style>

        :root {
            --dark-purple: rgb(105, 36, 137);
            --darker-purple: rgb(85, 28, 111);
            --border-bottom: 1.5px;
        }

        #navbar {
            background: white;
            height: 60px;
            width: 100%;
            z-index: 10;
            box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.1);
        }

        #navbar-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 100%;
        }

        #wit-logo {
            display: flex;
            align-items: center;
        } 

        #navbar a {
            color: black;
            font-size: 15px;
            letter-spacing: 1px;
            margin: 0px 20px;
            text-decoration: none;
            text-transform: uppercase;
        }

        #navbar a:hover {
            border-bottom: var(--border-bottom) solid var(--dark-purple);
        }

        #join-button {
            background-color: var(--dark-purple);
            color: white !important;
            padding: 10px 20px;
            border-radius: 25px;
        }

        #join-button:hover {
            background-color: var(--darker-purple);
            border-bottom: none !important;
        }

    </style>

    <!-- Navigation bar -->
    <nav id="navbar">
        <nav id="navbar-wrapper">
            <div id="wit-logo">
                <a href ={{ url_for('index') }} id="wit-logo"><img img id="wit-logo-img" alt="WIT Logo" src="/static/images/wit_logo.jpg" width="80px"></a>
            </div>
            <div>
                <a href={{ url_for('aboutus') }}>About Us</a>
                <a href={{ url_for('events') }}>Events</a>
                <a href={{ url_for('sponsors') }}>Sponsors</a>
                <a href={{ url_for('publications') }}>Publications</a>
                <a href={{ url_for('contactus') }}>Contact Us</a>
                <a id="join-button" href="https://usu.edu.au/clubs/women-in-technology/" target="_blank">
                    Join Us 
                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.45" stroke-linejoin="round">
                        <path d="M18 13v6a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                        <polyline points="15 3 21 3 21 9"></polyline>
                        <line x1="10" y1="14" x2="21" y2="3"></line>
                    </svg>
                </a>
            </div>
        </nav>
    </nav>

    <body>
        {% block content %} {% endblock %}
    </body>
    
{% endblock %}
