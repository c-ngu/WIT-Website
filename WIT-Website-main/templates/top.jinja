{% extends 'index.jinja' %}

{% block navbar %} 
    <style>

        #navbar { /* Navigation bar */
            background: white;
            height: 80px;
            width: 100%;            /* navbar stretches across entire window */
            z-index: 10;            /* navbar is stacked on top of most UI elements */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .nav-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 100%;
        }

        .logo {
            display: flex;
            align-items: center;
        } 

        #navbar li {
            display: inline-block;
        }

        #navbar li a {
            color: black;
            display: block;
            font-size: 15px;
            letter-spacing: 1px;
            margin: 0px 20px;
            text-decoration: none;
            text-transform: uppercase;
        }

        li a:hover {
            border-bottom: 2px solid rgb(28, 121, 184);
            color: rgb(28, 121, 184);
            transition: all 1s ease;
            -webkit-transition: all 1s ease;
        }
        
        .active { /* Indicates the page the user is on */
            border-bottom: 2px solid rgb(105, 36, 137);
            transition: all 1s ease;
        }

        .button-link {
            background-color: rgb(105, 36, 137); /* Background color */
            color: white; /* Text color */
            padding: 10px 20px; /* Padding to make it look like a button */
            border-radius: 25px; /* Rounded corners */
            text-decoration: none; /* Remove underline */
            display: inline-flex; /* Align items properly */
            align-items: center; /* Center the text and icon vertically */
        }     

    </style>

    <!-- Navigation bar -->
    <nav id="navbar">
        <nav class="nav-wrapper">
            <div class="logo">
                <a href ={{ url_for('index') }}><img img id="WITlogo" alt="WIT Logo" src="/static/images/wit_logo.jpg" width="80px"></a>
            </div>
            <div>
                <li><a class="active" href={{ url_for('aboutus') }}>About Us</a></li>
                <li><a href={{ url_for('events') }}>Events</a></li>
                <li><a href={{ url_for('sponsors') }}>Sponsors</a></li>
                <li><a href={{ url_for('publications') }}>Publications</a></li>
                <li><a href={{ url_for('contactus') }}>Contact Us</a></li>
                <li>
                    <a class="button-link" href="https://usu.edu.au/clubs/women-in-technology/" target="_blank">
                        Join Us 
                        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-external-link">
                            <path d="M18 13v6a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                            <polyline points="15 3 21 3 21 9"></polyline>
                            <line x1="10" y1="14" x2="21" y2="3"></line>
                        </svg>
                    </a>
                </li>
            </div>
        </nav>
    </nav>

    <body>
        {% block content %} {% endblock %}
    </body>
    
{% endblock %}
