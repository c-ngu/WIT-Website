<style>
/* Style for the top banner */
.top-banner {
    background-color: #7A1F8D; /* Purple background */
    padding: 50px 20px;
    display: flex;
    justify-content: center;
    align-items: center;
}

/* Content inside the banner */
.banner-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    width: 100%;
}

/* Title styling */
.banner-content .title {
    flex: 1;
    font-size: 4rem;
    font-weight: bold;
    color: white;
}

/* Caption styling */
.banner-content .caption {
    flex: 1;
    text-align: right;
    font-size: 1.5em;
    line-height: 1.6;
    color: white;
}

/* Grey margin container */
.grey-margin-container {
    background-color: #f2f2f2; /* Light grey background for the margin */
    padding-left: 20px;
    padding-right: 20px;
}

/* Full white content wrapper */
.full-white-container {
    background-color: white; /* White background */
    padding: 20px;
    max-width: 1200px;
    margin: 0 auto;
}

/* General styling for the content section */
.content-section {
    line-height: 1.6;
    font-size: 1.1em;
    color: #444;
}


/* Style for the cards (executive profiles) 
.card {
    width: 30%;
    margin: 15px;
