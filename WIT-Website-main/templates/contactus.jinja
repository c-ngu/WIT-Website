{% extends 'top.jinja' %}

{% block content %} 

    <style>

    .page-content {
        margin: 60px;
    }

    /* Style for the top banner */
        .top-banner {
            background-color: #7A1F8D; /* Purple background */
            padding: 50px 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 100px;
        }

        /* Content inside the banner */
        .banner-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

        /* Title styling */
        .banner-content .title {
            flex: 1;
            font-size: 4rem;
            font-weight: bold;
            color: white;
        }

        /* Caption styling */
        .banner-content .caption {
            flex: 1;
            text-align: right;
            font-size: 1.5em;
            line-height: 1.6;
            color: white;
            margin-right: 20px;
        }

    </style>

    <div class="top-banner">
        <div class="banner-content">
            <h1 class="title">Contact Us</h1>
            <div class="caption">
                Get in touch with us.
            </div>
        </div>
    </div>

    <div class="page-content">
        <p>
            <b>General Enquiries:</b> womenintechnusyd@gmail.com <br><br>
            <b>Sponsors:</b> sponsorship@witusyd.com <br><br>
            <b>Events:</b> events@witusyd.com <br><br>
            <b>President:</b> president@witusyd.com <br><br>
        </p>
    </div>
    


    <footer>  
        {% include "footer.jinja" %}
    </footer>
 



{% endblock %}